    # Rename this file to .env and fill in your actual secrets
    # This .env file should be added to .gitignore

    # === Database ===
    DB_NAME=saas_db
    DB_USERNAME=postgres
    DB_PASSWORD=your_local_db_password

    # === JWT ===
    # Generate a secure, long random string (e.g., using openssl rand -base64 64)
    APPLICATION_JWT_SECRET_KEY=your_very_secure_and_long_jwt_secret_key_here

    # === Stripe ===
    STRIPE_API_SECRET_KEY=sk_test_...your_test_key...
    STRIPE_API_PRICE_ID=price_...your_price_id...
    STRIPE_API_WEBHOOK_SECRET=whsec_...your_webhook_secret...

    # === Email ===
    SPRING_MAIL_HOST=smtp.gmail.com
    SPRING_MAIL_PORT=587
    SPRING_MAIL_USERNAME=your-email@gmail.com
    SPRING_MAIL_PASSWORD=your-gmail-app-password

    # === Frontend (Optional Override) ===
    # FRONTEND_BASE_URL=http://localhost:3000

